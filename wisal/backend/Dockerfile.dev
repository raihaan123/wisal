# Development Dockerfile for Backend
FROM node:20-alpine

WORKDIR /app

# Install development dependencies
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies (including devDependencies)
RUN npm install

# Copy application files
COPY . .

# Expose port
EXPOSE 3001

# Use nodemon for hot reload
CMD ["npm", "run", "dev"]